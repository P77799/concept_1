#class with twoo attributes balance and account num
#create method or function with credit ,debit and total balance

class Account:
    def __init__(self,balance,acc_no):
        self.balance=balance
        self.acc_no=acc_no
    
    def credit(self,amount):
        self.balance+=amount
        print("you have credited : ",amount)
        print("your total balance is",self.balance)

    def debited(self,amount):
        if self.balance> amount:
            self.balance-=amount
            print("you have debited: ",amount)
            print("your total balance is : ",self.balance)
        else:
            print("Insufficient balance")

    



acc1=Account(2000,123456)
acc1.credit(500)
acc1.debited(1000)
acc1.credit(200)